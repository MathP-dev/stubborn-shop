{% extends 'base.html.twig' %}

{% block title %}Créer un produit - Admin{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Ajouter un nouveau produit</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.name) }}
            </div>
            
            <div class="mb-3">
                {{ form_row(form.price) }}
            </div>
            
            <div class="mb-3">
                {{ form_row(form.image) }}
            </div>
            
            <div class="mb-3">
                {{ form_row(form.featured) }}
            </div>
            
            <h4>Stocks par taille</h4>
            <div class="row">
                {% for size in ['XS', 'S', 'M', 'L', 'XL'] %}
                    <div class="col-md-2 mb-3">
                        {{ form_row(form['stock_' ~ size]) }}
                    </div>
                {% endfor %}
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">Créer le produit</button>
            </div>
        {{ form_end(form) }}
        
        <div class="mt-3">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">Annuler</a>
        </div>
    </div>
</div>
{% endblock %}