<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Stubborn - Don't compromise on your look{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.png') }}">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('images/logo.png') }}" alt="Stubborn Logo" class="img-fluid logo-navbar">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_home' %}active-link{% endif %}"
                           href="{{ path('app_home') }}">Accueil</a>
                    </li>

                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'app_products' %}active-link{% endif %}"
                               href="{{ path('app_products') }}">Boutique</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request. get('_route') == 'app_cart' %}active-link{% endif %}"
                               href="{{ path('app_cart') }}">Panier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'app_register' %}active-link{% endif %}"
                               href="{{ path('app_register') }}">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request. get('_route') == 'app_login' %}active-link{% endif %}"
                               href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

<main>
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </div>
</main>

{% block footer %}
    <footer>
        <div class="container text-center">
            <p><strong>Stubborn</strong></p>
            <p>Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
            <p>Email: <a href="mailto:stubborn@blabla.com">stubborn@blabla.com</a></p>
            <p class="mt-3"><em>Don't compromise on your look</em></p>
        </div>
    </footer>
{% endblock %}

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom JS -->
<script src="{{ asset('js/main.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
