{% extends 'base.html.twig' %}

{% block title %}Paiement réussi - Stubborn{% endblock %}

{% block body %}
<div class="text-center my-5">
    <div class="mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="green" class="bi bi-check-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M10. 97 4.97a. 235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
        </svg>
    </div>

    <h1 class="text-success">Paiement réussi !</h1>
    <p class="lead">Merci pour votre commande. </p>

    <div class="card mx-auto payment-card">
        <div class="card-body">
            <h5>Détails de la commande</h5>
            <p><strong>Numéro de commande :</strong> #{{ order.id }}</p>
            <p><strong>Montant total :</strong> {{ order.totalPrice }} €</p>
            <p><strong>Date :</strong> {{ order.createdAt|date('d/m/Y H:i') }}</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
    </div>
</div>
{% endblock %}
